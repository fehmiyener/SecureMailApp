@{
    ViewData["Title"] = "New Message";
}

<div class="row justify-content-center">
    <div class="col-lg-7 col-md-9">
        <div class="card shadow-sm">
            <div class="card-body">
                <h3 class="card-title mb-4">New Message</h3>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger">
                        @ViewBag.Error
                    </div>
                }

                <form method="post">
                    <div class="mb-3">
                        <label class="form-label">Receiver Email</label>
                        <input name="recipientEmail" class="form-control" placeholder="example@mail.com" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Subject</label>
                        <input name="subject" class="form-control" placeholder="Subject" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Message</label>
                        <textarea name="content" class="form-control" rows="8"
                                  placeholder="Type your message here..."></textarea>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a class="btn btn-outline-secondary" asp-controller="Messages" asp-action="Inbox">
                            Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">Send</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
